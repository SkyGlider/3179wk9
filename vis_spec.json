{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A visualization of number of medals won by each country in the Tokyo Olympics.",
  "title": "Tokyo 2020 Olympics: Number of Medals by Country",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "#fff",
        "strokeWidth": 1
      },
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SkyGlider/3179wk9/main/medalscleansymbol.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "latitude": {"field": "latitude"},
        "longitude": {"field": "longitude"},
        "size": {
          "field": "Total",
          "type": "quantitative",
          "scale": {"rangeMax": 1000},
          "legend": null
        },
        "color": {
          "field": "Total",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
        {"field": "Team/NOC", "type": "nominal", "title": "Country"},
        {"field": "Rank", "type": "quantitative", "title": "Rank"},
        {"field": "Total", "type": "quantitative", "title": "Total Medals"}
        ]
      }
    }
  ],
  "width": 2000,
  "height": 1500
}
